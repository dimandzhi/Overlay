<Window x:Class="DialogWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Overlay" Height="155" Width="300" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>
        <Button x:Name="OK" Content="Make it so!" HorizontalAlignment="Left" Margin="180,82,0,0" VerticalAlignment="Top" Width="88" FontSize="16" Click="OK_Click"/>
        <Label Content="Frames: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Time (ms):" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" FontSize="16"/>
        <xctk:DoubleUpDown x:Name="Frames" Value="0" Margin="105,10,0,0" Increment="1" FontSize="16" HorizontalAlignment="Left" Width="163" Height="31" VerticalAlignment="Top" Minimum="0" KeyDown="Input_KeyDown"/>
        <xctk:DoubleUpDown x:Name="Time" Value="0" Margin="105,48,0,0" FontSize="16" HorizontalAlignment="Left" Width="163" Height="29" VerticalAlignment="Top" Minimum="0" Increment="10" KeyDown="Input_KeyDown"/>
    </Grid>
</Window>
